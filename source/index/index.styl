#top
    position: absolute
    bottom 40px
    width 100%
    right 0
    display: flex
    justify-content: center
    a
        width 40px
        height 40px
        margin-left 20px
        svg
            height: inherit
            width inherit
#logo
    position: absolute
    top 50%
    left 50%
    height 70%
    width 70%
    transform translate(-50%, -50%)
    svg
        height 100%
        width 100%
