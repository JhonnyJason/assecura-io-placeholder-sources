/*==============================================================================
 indexbody style
==============================================================================*/

#bottom
    position: absolute
    bottom 40px
    width 100%
    right 0
    display: flex
    justify-content: center
    a
        width 40px
        height 40px
        margin-left 20px
        position relative
        svg
            height: inherit
            width inherit

        #linkedin-icon
            animation dance 1.2s linear infinite
            animation-delay: 0.3s
        #twitter-icon
            animation dance 1.2s linear infinite
            animation-delay: 0.6s
        #instagram-icon
            animation dance 1.2s linear infinite
            animation-delay: 0.4s
        #facebook-icon
            animation dance 0.8s linear infinite
#logo
    position: absolute
    top 50%
    left 50%
    height 70%
    width 70%
    transform translate(-50%, -50%)
    svg
        height 100%
        width 100%
        animation dance 1.2s linear infinite

svg:hover
    animation none !important
svg:active
    animation none !important

@keyframes dance
    0%
        transform translateY(0) scale(1.0)
    10%
        transform translateY(-10%) scale(1.1)
    20%
        transform translateY(0) scale(1.0)
    
    70%
        transform translateY(0) scale(1.0)
    80%
        transform translateY(-10%) scale(1.1)
    90%
        transform translateY(0) scale(1.0)
    
    100%
        transform translateY(0) scale(1.0)
